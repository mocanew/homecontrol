{
  "name": "home-control",
  "version": "0.0.1",
  "description": "",
  "main": "homeControl.js",
  "scripts": {
    "start": "npm-run-all --parallel wakeonlan radiopi homecontrol",
    "dev": "npm-run-all --parallel watch:wakeonlan watch:radiopi watch:homecontrol",
    "wakeonlan": "node WakeOnLan/index.js",
    "radiopi": "node RadioPi/index.js",
    "homecontrol": "node homeControl.js",
    "lint": "eslint RadioPi/*.js WakeOnLan/*.js www/**/*.js www/**/*.jsx",
    "webpackDevServer": "webpack-dev-server --colors",
    "watch:homecontrol": "nodemon --quiet --watch homeControl.js -x \"npm run homecontrol\"",
    "watch:wakeonlan": "nodemon --quiet --watch WakeOnLan/ -x \"npm run wakeonlan\"",
    "watch:radiopi": "nodemon --quiet --watch RadioPi/ -x \"npm run radiopi\""
  },
  "author": "Valentin Mocanu <mr_vali@yahoo.ro> (http://rontavstudio.com)",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.4",
    "babel-core": "^6.7.2",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "eslint": "^2.2.0",
    "eslint-plugin-react": "^4.1.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "npm-run-all": "^1.6.0",
    "postcss-loader": "^0.8.2",
    "precss": "^1.4.0",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^3.2.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "async": "^2.0.0-rc.1",
    "body-parser": "^1.15.0",
    "express": "^4.13.4",
    "jsx-loader": "^0.13.2",
    "minilog": "^3.0.0",
    "react": "^15.0.0",
    "react-router": "^2.0.1",
    "socket.io": "^1.4.5",
    "webpack": "^1.12.14",
    "arpscan": "^0.1.0",
    "ping": "^0.1.10",
    "socket.io-client": "^1.4.5",
    "wake_on_lan": "0.0.4",
    "lirc_node": "0.0.4",
    "mplayer": "^2.0.1"
